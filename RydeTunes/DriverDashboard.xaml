<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RydeTunes.DriverDashboard">
    <ContentPage.Content>
        <StackLayout Spacing="0">
            <Label Text="##INSTRUCTIONS##" FontSize="20" VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Center"/>
            <ContentView VerticalOptions="FillAndExpand" BackgroundColor="{StaticResource SpotifyGreen}">
                <ContentView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="StartRide_OnTapped"/>
                </ContentView.GestureRecognizers>

                <Label Text="Start Ride" Style="{StaticResource BigButtonTitleStyle}"/>
            </ContentView>
            <ContentView VerticalOptions="FillAndExpand" BackgroundColor="{StaticResource StopRed}">
                <ContentView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="StartRide_OnTapped"/>
                </ContentView.GestureRecognizers>

                <Label Text="End Ride" Style="{StaticResource BigButtonTitleStyle}"/>
            </ContentView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>